package sudoku;

public class Sudoku implements SudokuSolver {
	
	public static void main(String[] args) {
		Sudoku sudoku = new Sudoku();
		new SudokuController(sudoku);
	}
	
	
	int[][] table;
	boolean[][] checkTable;
	
	public Sudoku() {
		table = new int[9][9];
		checkTable = new boolean[9][9];
	}

	@Override
	public void setNumber(int r, int c, int nbr) {
		// TODO Auto-generated method stub
		table[r][c] = nbr;

	}

	@Override
	public int getNumber(int r, int c) {
		// TODO Auto-generated method stub
		return table[r][c];
	}

	@Override
	public void clearNumber(int r, int c) {
		// TODO Auto-generated method stub
		table[r][c] = 0;
	}

	@Override
	public boolean isValid(int r, int c, int nbr) {
		// TODO Auto-generated method stub
//		if(table[r][c] != 0) {
//			return false;
//		}
		
		//Case 2: Lodrätt
		for(int row = 0; row < table.length; row++) {
			if(table[row][c] == nbr) {
				return false;
			}
		}
		
		//Case 1: Vågrätt
		for(int col = 0; col < table[r].length; col++) {
			if(table[r][col] == nbr) {
				return false;
			}
		}
		
		//Case 3: Grupp 1-9
		//Kolla vilken grupp
		int rowGroup = r/3;
		int colGroup = c/3;
	
		for(int row = 3*rowGroup; row < r*rowGroup + 2; r++) {
			for(int col = 3*colGroup; col < 3*colGroup + 2; c++) {
				if(table[row][col] == nbr) {
					return false;
				}
			}
		}
		
		return true;
		
	}

	@Override
	public boolean isAllValid() {
		for(int r = 0; r < table.length; r++) {
			for(int c = 0; c < table[r].length; c++) {
				if(!isValid(r, c, table[r][c])) {
					return false;
				}
			}
		}
		return true;
	}
	


	@Override
	public boolean solve() {
		// TODO Auto-generated method stub
		//Kalla på rekursiva solve-metoden
		if(isAllValid()) {
			solve(0,0);
		}
		return false;
	}
	
	
	private boolean solve(int r, int c) {
		//Basfall
		//Rekursiv lösning
		//Returnera true om gick att lösa, annars: 
		return false;
	}

	@Override
	public void clear() {
		// TODO Auto-generated method stub
		for(int r = 0; r < table.length; r++) {
			for(int c = 0; c < table[r].length; c++) {
				table[r][c] = 0;			}
		}

	}

	@Override
	public int[][] getMatrix() {
		// TODO Auto-generated method stub
		return table;
	}

	@Override
	public void setMatrix(int[][] nbrs) {
		// TODO Auto-generated method stub	
        table = nbrs;
	
	}
}
